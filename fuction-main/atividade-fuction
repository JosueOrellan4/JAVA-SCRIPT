/*1]Imprima a tabuada do 5 (5 x 1 até 5 x 10) utilizando um laço de repetição.
 
function imprimirtabuadado5() {
   let cont=1
  while(cont<=10){
    console.log (5,"x", cont, 5 * cont)
    cont++
  }
}
imprimirtabuadado5()
